    <!-- JavaScript demos -->
    <section class="js-section">
      <h2>Color Changing Button</h2>
      <p>Click the button to toggle its color.</p>
      <button id="colorToggleBtn" class="color-btn">Click me</button>
    </section>

    <section class="js-section">
      <h2>Time-based Greeting</h2>
      <p>Click the button to see a greeting based on the current time.</p>
      <button id="greetBtn" class="calc-btn">Show Greeting</button>
    </section>

    <section class="js-section">
      <h2>Simple Calculator (Add Two Numbers)</h2>
      <div class="calculator">
        <input type="number" id="num1" placeholder="First" />
        <span>+</span>
        <input type="number" id="num2" placeholder="Second" />
        <button id="addBtn" class="calc-btn">Add</button>
        <span>=</span>
        <span id="result" class="calc-result">0</span>
      </div>
    </section>
  </div>

  <script>
    // Button that changes color when clicked
    const colorToggleBtn = document.getElementById("colorToggleBtn");
    if (colorToggleBtn) {
      colorToggleBtn.addEventListener("click", () => {
        colorToggleBtn.classList.toggle("clicked");
      });
    }

    // Alert box with time-based greeting
    const greetBtn = document.getElementById("greetBtn");
    if (greetBtn) {
      greetBtn.addEventListener("click", () => {
        const hour = new Date().getHours();
        let greeting;
        if (hour < 12) {
          greeting = "Good morning!";
        } else if (hour < 18) {
          greeting = "Good afternoon!";
        } else {
          greeting = "Good evening!";
        }
        alert(greeting + " The current hour is " + hour + ":00.");
      });
    }

    // Basic calculator: add two numbers and display the result
    const num1Input = document.getElementById("num1");
    const num2Input = document.getElementById("num2");
    const addBtn = document.getElementById("addBtn");
    const resultSpan = document.getElementById("result");

    if (addBtn && num1Input && num2Input && resultSpan) {
      addBtn.addEventListener("click", () => {
        const a = parseFloat(num1Input.value) || 0;
        const b = parseFloat(num2Input.value) || 0;
        const sum = a + b;
        resultSpan.textContent = sum;
      });
    }
  </script>
